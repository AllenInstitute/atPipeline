        </dependency>

        <dependency>
              <groupId>org.janelia.render</groupId>
              <artifactId>render-app</artifactId>
              <version>2.0.1</version>
        </dependency>

        <dependency>
              <groupId>com.googlecode.json-simple</groupId>
              <artifactId>json-simple</artifactId>
              <version>1.1.1</version>
        </dependency>

        <dependency>
              <groupId>org.janelia.render</groupId>
